<% include ../partials/header %>

<div class="container text-center">
    <h1>Edit <strong><%= campground.name %></strong></h1>
    <div class="row">
        <div id= "form" class="container">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campName" placeholder="Camp Name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imgUrl" placeholder="Image Url" value="<%= campground.photo %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="Description" value="<%= campground.desc %>">
                </div> 
                 <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price Per Night" value="<%= campground.price %>"min="0.01" step="0.01">
                </div> 
                <div class="form-group">
                    <input class="form-control btn-primary" type="submit" value="Update" formaction="/campgrounds/<%= campground._id %>?_method=PUT">
                    <input class="form-control btn-danger" type="submit" value="Delete" formaction="/campgrounds/<%= campground._id %>?_method=DELETE">
                </div>
                <a href="/campgrounds">Back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>