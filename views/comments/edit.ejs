<%include ../partials/header %>

<div class="container text-center">
    <h1>Edit Comment</h1>
    <div class="row">
        <div id="form" class="container">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment" value="<%= comment.text %>">
                </div> 
                <div class="form-group">
                    <input class="form-control btn-primary" type="submit" value="Update">
                </div>
                <a href="/campgrounds/<%= campground_id %>">Back</a>
            </form>
        </div>
    </div>
</div>

<%include ../partials/footer %>